<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_in_call_incoming"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:padding="5dp"
    android:background="@color/incoming_header_drak_bg_transparent"
    android:visibility="invisible">

    <org.linphone.ui.RoundedImageView
        android:id="@+id/imageview_incoming_call_user_image"
        android:src="@drawable/unknown_small"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_incoming_call_user_image"
        android:layout_centerInParent="true"
        android:orientation="vertical">

    <TextView
        android:id="@+id/label_incoming_call_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_incoming_call_user_image"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:text="User name"/>

    <TextView
        android:id="@+id/label_incoming_call_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_incoming_call_user_name"
        android:layout_toRightOf="@id/imageview_incoming_call_user_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/label_incoming_call_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20dp"
        android:textSize="18sp"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_in_call_passive"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:background="@color/background_color"
    android:visibility="invisible">

    <ImageView
        android:id="@+id/imageview_incoming_call_passive_user_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:background="@color/call_button_green"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_incoming_call_passive_user_image"
        android:layout_centerInParent="true"
        android:orientation="vertical">

    <TextView
        android:id="@+id/label_incoming_call_passive_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_incoming_call_user_image"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:text="User name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_incoming_call_passive_user_name"
        android:layout_toRightOf="@id/imageview_incoming_call_passive_user_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="3dp"
        android:text="Is holding..."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageview_incoming_call_user_image"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageview_incoming_call_user_image"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="Hold time:"/>

        <Chronometer
            android:id="@+id/label_incoming_call_hold_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_incoming_call_user_name"
            android:layout_toRightOf="@id/imageview_incoming_call_user_image"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>